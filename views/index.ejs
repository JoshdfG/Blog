<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <%-include ('./partials/header.ejs')%>
<body>
  <!-- Your EJS content using Tailwind CSS classes -->
  <%-include ('./partials/navbar.ejs')%>

  <div class="container">
    <div class="">    
      <h1 class="text-3xl text-center font-semibold">All Blogs</h1>
     <div class="border-2 rounded-lg mx-auto border-black w-[10%]"></div>
    </div>

    <% if (blogs.length >0){%>
      <!-- Iterating over the blogs -->
    <% blogs.forEach(blog => {%>
      <div> 
        <h1 class="font-bold mt-4"><%= blog.title %></h1>
        <p><%= blog.snippet %></p></div>
   
    <% }) %>
    <!-- an else statement to display if there are no blogs -->
   <% } else{%>
    <p>There are no blogs to display!!!</p>
    <% } %>
  </div>
  <div class="text-center mt-4">
      <button class="bg-blue-950 hover:scale-105 p-2 text-white rounded-md hover:bg-blue-800 transition-all duration-500 ease-in-out">Click Me</button>
    </div>
</body>
</html>
